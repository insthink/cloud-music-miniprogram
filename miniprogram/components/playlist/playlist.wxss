/* components/playlist/playlist.wxss */
.playlist-item-wrapper {
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.playlist-item-img {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}

.playlist-item-text {
  padding-left: 26rpx;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.5);
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  right: 10rpx;
  top: 4rpx;
}

.playlist-item-name {
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}