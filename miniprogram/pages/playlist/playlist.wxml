<swiper indicator-dots="true" autoplay="true">
  <block wx:for="{{swiperImgUrls}}" wx:key="url">
    <swiper-item>
      <image src="{{item.url}}" mode="widthFit" class="full-fill"></image>
    </swiper-item>
  </block>
</swiper>

<view class="playlist-wrapper">
  <block wx:for="{{playlist}}" wx:key="_id">
    <cc-playlist playlistItem="{{item}}"></cc-playlist>
  </block>
</view>