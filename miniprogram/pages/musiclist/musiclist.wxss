/* pages/musiclist/musiclist.wxss */
.cover-bg {
  height: 320rpx;
  opacity: 0.4;
  filter: blur(40rpx);
}

.cover-mask {
  width: 96%;
  height: 320rpx;
  background-color: #333;
  position: absolute;
  top: 0;
  left: 2%;
  right: 2%;
  z-index: -1;
  border-radius: 6rpx;
}

.info {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  padding: 20rpx;
  width: 100%;
  height: 320rpx;
  align-items: center;
  box-sizing: border-box;
}

.info-img {
  width: 280rpx;
  height: 280rpx;
  border-radius: 6rpx;
  margin: 0 20rpx;
}

.info-text {
  color: #fff;
  font-weight: 400;
  font-size: 36rpx;
}